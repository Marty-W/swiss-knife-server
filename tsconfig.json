{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ESNext"],
    "allowJs": true,
    "checkJs": false,
    "strict": false,
    "rootDir": "src",
    "outDir": "build",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strictNullChecks": true,
    "resolveJsonModule": true
  }
}
